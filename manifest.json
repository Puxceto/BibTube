{
  "manifest_version": 3,
  "name": "BibTube",
  "description": "Copy BibTeX for YouTube videos",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "injectButton.js"
      ]
    }
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "commands": {
    "copy-bib": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Copy BibTeX entry"
    }
  },
  "action": {
    "default_popup": "options/popup.html"
  }
}
